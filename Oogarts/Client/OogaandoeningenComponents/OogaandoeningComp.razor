<div class="oogaandoening">
    <h2 id="titel">@Titel</h2>
    <div class="content">
        <div class="info">
            <h2 class="subkop" id="info-titel">Info</h2>
            <p class="inhoud">@Inhoud</p>
        </div>
        <div class="behandeling">
            <h2 class="subkop">
                Behandeld door
            </h2>
            <ul>
                @foreach (var Dokter in Dokters)
                {
                    <li>@Dokter</li>
                }
            </ul>
            <a href="afspraak-maken" class="afspraak">Maak een afspraak</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public String Titel {get; set;} = "Titel parameter nodig";
    [Parameter]
    public String Inhoud {get; set;} = "Inhoud parameter nodig";
    @* Lorem ipsum dolor, sit amet consectetur adipisicing elit. Perferendis nulla consequatur sapiente cum, atque odio magnam accusamus tempora totam omnis? Quo suscipit ab quos commodi at libero assumenda aperiam labore? *@
    [Parameter]
    public List<String> Dokters {get; set;} = new List<String> {"Lijst", "van", "dokters", "nodig"};
}